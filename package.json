  "name": "decentralized-learning-platform",
  "version": "1.0.0",
  "description": "A Web3 decentralized platform for teaching and learning 5-10 minute skills",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:contracts && npm run build:frontend",
    "build:contracts": "npx hardhat compile",
    "build:frontend": "webpack --mode production",
    "deploy": "npx hardhat run scripts/deploy.js --network polygon",
    "test": "npx hardhat test",
